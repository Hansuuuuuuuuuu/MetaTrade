<h1> Your Profile </h1>

<input name="rating" value="0" id="rating_star" type="hidden" user="<%= @user2.id	%>" rater="<%= current_user	%>" />
<div class="overall-rating">
    (Average Rating <span id="avgrat"><%= @user2.average_rating %></span> Based on <span id="totalrat"><%= @user2.total_rating %></span>  rating)
</div>

<div class="row">
	<div class="col-md-3">
		<%= image_tag @user2.avatar.url(:medium) %>
	</div>
	<div class="col-md-3">
		Joined <%= @user2.created_at	%>
	</div>
</div>
<div class="row">
	<div class="col-md-3">
		<%= best_in_place @user2, :description, :as => :textarea, url:  edit_user_registration_path, :ok_button => 'Save', :cancel_button => 'Cancel',:activator => "#activator1" %>
		<a href="#" id="activator1">Edit</a>
	</div>

</div>	
<div class="row">	
	<div class="col-md-3">
		<%= @user2.location	%>
	</div>
</div>



