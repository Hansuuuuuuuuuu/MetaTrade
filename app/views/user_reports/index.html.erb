<p id="notice"><%= notice %></p>

<h1>User Reports</h1>

<table>
  <thead>
    <tr>
      <th>Reason</th>
      <th>Reporter</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_reports.each do |user_report| %>
      <tr>
        <td><%= user_report.reason %></td>
        <td><%= user_report.reporter %></td>
        <td><%= user_report.user %></td>
        <td><%= link_to 'Show', user_report %></td>
        <td><%= link_to 'Edit', edit_user_report_path(user_report) %></td>
        <td><%= link_to 'Destroy', user_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Report', new_user_report_path %>
